@*Define MOdel*@
@model IEnumerable<Cinema>


@*Define VIew Data*@

@{
    ViewData["title"] = "List Of Cinemas:";
}


@*Write Code*@
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th> @Html.DisplayNameFor(model =>model.Logo)</th>
                    <th> @Html.DisplayNameFor(model =>model.Name)</th>
                    <th> @Html.DisplayNameFor(model =>model.Description)</th>
                    <th> Actions</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Logo" style="max-width:150px" />

                        </td>
                        <td class="align-middle text-center">
                            @Html.DisplayFor(modelItem=> item.Name)
                        </td>

                        <td class="align-middle text-center"> @Html.DisplayFor(modelItem=> item.Description)</td>
                        <td class="align-middle">

                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Detail</a> |
                            <a class="btn btn-outline-danger font-white"><i class="bi bi-pencil-trash"></i>Delete</a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>



</div>